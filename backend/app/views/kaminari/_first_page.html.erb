<% if current_page.first? %>
  <li class="page-item disabled">
    <%= content_tag :a, raw(t 'views.pagination.first'), data: { remote: remote }, class: 'page-link' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to raw(t 'views.pagination.first'), url, remote: remote, class: 'page-link' %>
  </li>
<% end %>
